    <changeSet id="adding-roles-table" author="I">
        <createTable tableName="roles">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="role_name" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="adding-users_roles-table" author="I">
        <createTable tableName="users_roles">
            <column name="user_id" type="integer">
                <constraints foreignKeyName="fk_user_id" references="users(id)"/>
            </column>
            <column name="role_id" type="integer">
                <constraints foreignKeyName="fk_role_id" references="roles(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="adding-reports_categories-table" author="i">
        <createTable tableName="reports_categories">
            <column name="report_id" type="integer">
                <constraints foreignKeyName="fk_report_id" references="reports(id)"/>
            </column>
            <column name="category_id" type="integer">
                <constraints foreignKeyName="fk_category_id" references="operation_categories(id)"/>
            </column>
        </createTable>
    </changeSet>
